<view class="container">
    
    <view  class="userinfo">
        <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
        <text class="userinfo-nickname">{{userInfo.nickName}}</text>
        <text class="userinfo-location">{{userInfo.province+"  "+userInfo.city}}</text>
    </view>

    <view class="me_center_item_list">
        <view class="item_left_title">订单管理</view>
        <image class="menu-item-api-item-arrow" src="/icons/arrowright.png"></image>
    </view>

    <view class="me_center_item_list">
        <view class="item_left_title">配送地址管理</view>
        <image class="menu-item-api-item-arrow" src="/icons/arrowright.png"></image>
    </view>

    <view class="me_center_item_list" bindtap="onAboutUsTapped">
        <view class="item_left_title">关于我们</view>
        <image class="menu-item-api-item-arrow" src="/icons/arrowright.png"></image>
    </view>

</view>