    flex-direction: column;
}

.ingredientName
{
    font-size: 35rpx;
    color: #e50263;
}

.ingredientPrice
{
    margin-top: 20rpx;
    font-size: 35rpx;
    color: #e38976;
}

.ingredientStore
{
    margin-top: 20rpx;
