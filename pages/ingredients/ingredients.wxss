
.topcategory
{
    height: 100rpx;
    width: 750rpx;
    background: "e50263";
    align-items: center;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    border-bottom: 1px solid #d8d8d8;
    border-top: 1px solid #d8d8d8;
    position: fixed;
    top: 0px;

}
.categroySelected
{
    color: #e50263;
}

.categroyNormal
{
    font-size: 40rpx;
    background: #99999;
    margin-top: 10rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;
}

.vertical_sep_line
{
    width: 1px;
    height: 36rpx;
    background: #d8d8d8;
}

.listWrapView
{
    margin-top: 100rpx;
    display: block;
     overflow: hidden;
    border: 0;
}

.ingredientItem
{
    width: 750rpx;
    height: 240rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    border-bottom: 1rpx solid #d8d8d8;
}


.ingredientImage
{
    width: 180rpx;
    height: 180rpx;
    margin-left: 20rpx;
    margin-top: 30rpx;
    background: #d8d8d8;
}

.ingredientDesView
{
    margin-left: 30rpx;
    margin-top: 30rpx;
    display: flex;
    flex-direction: column;
}

.ingredientName
{
    font-size: 35rpx;
    color: #e50263;
}

.ingredientPrice
{
    margin-top: 20rpx;
    font-size: 35rpx;
    color: #e38976;
}

.ingredientStore
{
    margin-top: 20rpx;
    font-size: 35rpx;
    color: #e45327;
}

.ingredientRightView
{
    flex:1;
    margin-left: 30rpx;
    justify-content: flex-start;
    display: flex;
    flex-direction: column;
    align-items: center;
    float: right;
    right: 0px;
    
}

.ingredientAmountWrapView
{
    display: flex;
    flex-direction: row;
    margin-top: 30rpx;
    justify-content: space-between;
}

.ingredientAddCart
{
    margin-top: 30rpx;
}


/*top tab*/
.top-tab{
  height:36px;
  width: 750rpx;
  border-top: 1rpx solid #dddcdc;
  color: #7b7b7b;
  font-size: 15px;
  background-color: #f7f7f7;
  z-index: 9999;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: stretch;
  /*position: fixed;*/
  top: 0;
}
.top-tab .top-tab-item{
  /*display: inline-block;*/
  /*width: 16%;*/
  flex-grow: 1;
  height: 35px;
  line-height: 35px;
  text-align: center;
}
.top-tab-item.active {
  border-bottom:2px solid red;
  color: red;
}

